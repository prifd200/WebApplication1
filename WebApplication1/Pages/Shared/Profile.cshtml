@model WebApplication1.Models.User
@using WebApplication1.Models

@{
    ViewData["Title"] = "Личный кабинет";
}
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="account-card p-4 p-md-5">
                    <div class="account-info mb-4">
                        <h2 class="mb-0">Личный кабинет</h2>
                    </div>
                    <table class="table">
                        <tr class="info-row">
                            <th class="col-md-4 info-label"> Логин</th>
                            <td class="col-md-8 info-value">@Model.Username</td>
                        </tr>
                        <tr class="info-row">
      
                            <th class="col-md-4 info-label"> Имя</th>
                            <td class="col-md-8 info-value">@Model.FirstName</td>
                        </tr>
                        <tr class="info-row">
                            
                            <th class="col-md-4 info-label"> Фамилия</th>
                            <td class="col-md-8 info-value">@Model.LastName</td>
                        </tr>
                        <tr class="info-row">
                   
                            <th style="border-bottom:none" class="col-md-4 info-label"> Email</th>
                            <td style="border-bottom:none" class="col-md-8 info-value">@Model.Email</td>
                        </tr>

                    </table>
