                    @*         <div class="col-md-8 info-value">jonathan.smith@example.com</div> *@
                    @*     </div> *@
                    @* </div> *@

                    <div class="account-actions">
                        <div class="d-flex flex-column flex-md-row gap-2 gap-md-3">
                            <a asp-action="Edit" class="btn btn-primary mb-3">Редактировать профиль</a>
                            <a asp-controller="Profile" asp-action="ChangePassword" class="btn btn-secondary mb-3">Изменить пароль</a>
                        </div>
