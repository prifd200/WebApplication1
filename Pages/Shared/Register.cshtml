@model WebApplication1.Models.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<style>
    :where([class^="ri-"])::before {
        content: "\f3c2";
    }
</style>
<div class="auth-container">
    <div class="card mb-3" id="loginCard" style="display: block;">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <h2 class="mt-3 mb-4">Регистрация</h2>
            </div>
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for ="Username" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ri-user-line"></i>
                        </span>
                        <input asp-for="Username" type="text" class="form-control" placeholder="Выберите username">
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ri-mail-line"></i>
                        </span>
                        <input asp-for="Email" type="email" class="form-control" id="registerEmail" placeholder="Введите email" >
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <div class="input-group">
                        <select asp-for="Role" class="form-control" placeholder="Укажите роль">
                        <option value="User">Пользователь</option>
                        <option value="Admin">Администратор</option>
                        </select>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="FirstName" for="registerName" class="form-label"></label>
                        <input asp-for="FirstName" type="text" class="form-control" id="registerName" placeholder="Введите имя" >
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="LastName" for="registerSurname" class="form-label"></label>
                        <input asp-for="LastName" type="text" class="form-control" id="registerSurname" placeholder="Введите фамилию">

                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ri-lock-line"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control password" id="registerPassword" placeholder="Придумайте пароль" required="">
                        <span class="input-group-text password-toggle" onclick="togglePassword('registerPassword')">
                            <i class="ri-eye-line" id="registerPasswordToggle"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ri-lock-line"></i>
                        </span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control password" id="confirmPassword" placeholder="Подтвердите пароль" required="">
                        <span class="input-group-text password-toggle" onclick="togglePassword('confirmPassword')">
                            <i class="ri-eye-line" id="confirmPasswordToggle"></i>
                        </span>                  
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">Зарегистрироваться</button>

                @* <div class="text-center"> *@
                @*     <p>Уже есть аккаунт? <a asp-controller="Account" asp-action="Login">Войдите</a></p> *@
                @* </div> *@
            </form>
        </div>
    </div>
</div>
